{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      { "name": "typescript-plugin-css-modules" },
      {
        "name": "next"
      }
    ],
    "paths":{
      "@/*":["src/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
